<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guessgame.akwag.myapplication.MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@drawable/noblur" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="@string/welcome"
        android:gravity="center_horizontal"
        android:padding="50dp"
        android:typeface="normal"
        android:textSize="40sp"
        android:textStyle="bold" />

    <View
        android:layout_marginTop="470dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#424242" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_marginBottom="2020dp"
        android:text="@string/welcome_game_description"
        android:gravity="center_horizontal"
        android:padding="70dp"
        android:typeface="normal"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:id="@+id/textView" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_forward_white_24dp"
        android:layout_marginTop="12dp"
        android:id="@+id/floatingActionButton"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

</RelativeLayout>
