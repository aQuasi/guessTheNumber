<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guessgame.akwag.myapplication.MainActivity">

    <Button
        android:id="@+id/button_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:text="@string/yes"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/button_yes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/button_yes"
        android:padding="20dp"
        android:text="@string/no"
        android:textSize="16sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:background="@drawable/noblur" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:text="@string/welcome"
        android:gravity="center_horizontal"
        android:padding="50dp"
        android:typeface="normal"
        android:textSize="40sp"
        android:textStyle="bold" />

    <View
        android:layout_marginTop="470dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#424242" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_marginBottom="2020dp"
        android:text="@string/welcome_game_description"
        android:gravity="center_horizontal"
        android:padding="70dp"
        android:typeface="normal"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="normal" />

</RelativeLayout>
